<!-- START @PAGE CONTENT -->
<section id="page-content">

  <!-- Start page header -->
  <!-- /.header-content -->
  <!--/ End page header -->

  <!-- Start body content -->
  <div class="body-content animated fadeIn">

    <div class="row">

      <div class="col-md-12 text-center">

        <h1>MODIFIER MON PROFIL</h1></br>

      </div>


    </div>

    <div class="row">




    </div>



    <div class="row">


    <div class="panel rounded shadow">
      <div class="panel-heading">
        <div class="clearfix"></div>
      </div><!-- /.panel-heading -->
      <div class="panel-body no-padding rounded-bottom">

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-horizontal form-bordered" }) do |f| %>
          <div class="form-body">
            <h2>Modifier votre profil</h2>
            <%= f.error_notification %>

            <div class="form-group">
              <div class="form-inputs">
                <div class="col-sm-9">
                  <%= f.input :email, required: true, autofocus: true  %>
                </div>
              </div>
            </div>

            <div class="form-group">
              <div class="form-inputs">
                <div class="col-sm-9">
                  <%= f.input :password, autocomplete: "off", hint: "Ne pas remplir si vous ne souhaitez pas le changer.", required: false, label: "Nouveau mot de passe" %>
                </div>
              </div>
            </div>

            <div class="form-group">
              <div class="form-inputs">
                <div class="col-sm-9">
                  <%= f.input :password_confirmation, required: false, label: "Confirmation du mot de passe" %>
                </div>
              </div>
            </div>

            <div class="form-group">
              <div class="form-inputs">
                <div class="col-sm-9">
                  <%= f.input :last_name, required: false, label: "Nom" %>
                </div>
              </div>
            </div>

            <div class="form-group">
              <div class="form-inputs">
                <div class="col-sm-9">
                  <%= f.input :first_name, required: false, label: "Prénom" %>
                </div>
              </div>
            </div>

            <div class="form-group">
              <div class="form-inputs">
                <div class="col-sm-9">
                  <%= f.input :name_pro, required: false, label: "Nom commercial/Enseigne" %>
                </div>
              </div>
            </div>

            <div class="form-group">
              <div class="form-inputs">
                <div class="col-sm-9">
                  <%= f.input :phone, required: false, label: "Téléphone" %>
                </div>
              </div>
            </div>

            <div class="form-group">
              <div class="form-inputs">
                <div class="col-sm-9">
                  <%= f.input :address, required: false, label: "Adresse" %>
                </div>
              </div>
            </div>

            <div class="form-group">
              <div class="form-inputs">
                <div class="col-sm-9">
                  <%= label_tag(:user_zip_code, "Code postal") %>
                  <%= f.number_field :zip_code, in: 1..999999, step:1 ,required: false, label: "Code postal" %>
                </div>
              </div>
            </div>

            <div class="form-group">
              <div class="form-inputs">
                <div class="col-sm-9">
                  <%= f.input :town, required: false, label: "Ville" %>
                </div>
              </div>
            </div>

                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
                <% end %>

              </div>
            </div>

            <div class="form-footer">
              <div class="pull-right">
                <div class="form-actions">
                  <%= link_to "Retour", :back, class: "btn btn-default" %>
                  <%= f.button :submit, "Mettre à jour", {class: "btn btn-success"} %>
                </div>
              </div>
              <div class="clearfix"></div>
            </div><!-- /.form-footer -->

          <% end %>
          </div><!-- /.form-body -->

        <h3>Supprimer mon compte</h3>

        <p>Vous souhaitez vous désinscrire ? <%= link_to "Supprimer mon compte !", registration_path(resource_name), data: { confirm: "Attention la suppression de votre compte est permanente vous perdrez définitivement tous vos contacts et tous vos crédits ! Voulez vous continuer?" }, method: :delete %></p>

      </div><!-- /.panel-body -->
    </div>

  </div>




  </div><!-- /.body-content -->
  <!--/ End body content -->

</section><!-- /#page-content -->
<!--/ END PAGE CONTENT -->
