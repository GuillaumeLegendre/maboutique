<!-- START @PAGE CONTENT -->
<section id="page-content">

  <!-- Start body content -->
  <div class="body-content animated fadeIn">

    <!-- Start mail page -->
    <div class="row compose-mail-wrapper">

      <div class="col-sm-12">
        <!-- Star form compose mail -->
        <%= form_tag(contact_send_email_path, class: "form-horizontal", :multipart => true) do -%>
          <div class="panel rounded shadow">
            <div class="panel-heading">
              <div class="pull-left">
                <h3 class="panel-title">Envoyer un email</h3>
              </div>
              <div class="clearfix"></div>
            </div><!-- /.panel-heading -->
            <div class="panel-body">
              <div class="compose-mail">
                <div class="form-group">
                  <label for="subject" class="col-sm-2 control-label">Sujet:</label>
                  <div class="col-sm-10">
                    <input type="text" id="subject" class="form-control input-sm" name="email[subject]">
                  </div>
                </div><!-- /.form-group -->
                <div class="form-group">
                  <div class="col-sm-offset-2 col-sm-10">
                    <textarea class="summernote" name="email[body]"></textarea>
                  </div>
                </div><!-- /.form-group -->
              </div><!-- /.compose-mail -->

              <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                  <label for="subject" class="col-sm-2 control-label">envoyer aux </label>
                  <select name="email[gender]">
                    <option value="">homme et femme</option>
                    <option value="male">homme</option>
                    <option value="female">femme</option>
                  </select>
                  <span> et </span>
                  <select name="email[vip]">
                    <option value="">tous le monde</option>
                    <option value="true">seulement VIP</option>
                  </select>
                </div>
              </div><!-- /.form-group -->
            </div><!-- /.panel-body -->
            <div class="panel-footer">
              <div class="pull-right">
                <button type="submit" class="btn btn-success btn-sm"><i class="fa fa-send"></i> Send Email</button>
              </div>
              <div class="clearfix"></div>
            </div><!-- /.panel-footer -->
          </div><!-- /.panel -->
         <% end %>
        <!--/ End form compose mail -->
      </div>
    </div><!-- /.row -->
    <!--/ End mail page -->

  </div>
  <!-- End body content -->

</section><!-- /#page-content -->
<!--/ END PAGE CONTENT -->
