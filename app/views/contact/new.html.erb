<link href="/css/components.css" rel="stylesheet">


<body class="page-sound" style="display: block;">

        <!-- START @WRAPPER -->
        <section id="wrapper" style="opacity: 1;">

            <!-- START @HEADER -->
            <header id="header">

                <!-- Start header left -->
                <div class="header-left">
                    <!-- Start offcanvas left: This menu will take position at the top of template header (mobile only). Make sure that only #header have the `position: relative`, or it may cause unwanted behavior -->
                    <div class="navbar-minimize-mobile left">
                        <i class="fa fa-bars"></i>
                    </div>
                    <!--/ End offcanvas left -->

                    <!-- Start navbar header -->
                    <div class="navbar-header">

                        <!-- Start brand -->
                        <a class="navbar-brand" href="dashboard.html">
                            <img src="/assets/logo-ma-boutique.png" alt="brand logo" id="logo-header"/>
                        </a><!-- /.navbar-brand -->
                        <!--/ End brand -->

                    </div><!-- /.navbar-header -->
                    <!--/ End navbar header -->

                    <!-- Start offcanvas right: This menu will take position at the top of template header (mobile only). Make sure that only #header have the `position: relative`, or it may cause unwanted behavior -->
                    <div class="navbar-minimize-mobile right">
                        <i class="fa fa-cog"></i>
                    </div>
                    <!--/ End offcanvas right -->

                    <div class="clearfix"></div>
                </div><!-- /.header-left -->
                <!--/ End header left -->

                <!-- Start header right -->
                <div class="header-right">
                  <% flash.each do |name, msg| %>
                  <%= content_tag :div, msg, class: "alert alert-info" %>
                <% end %>
                    <!-- Start navbar toolbar -->
                    <!-- /.navbar-toolbar -->
                    <!--/ End navbar toolbar -->
                </div><!-- /.header-right -->
                <!--/ End header left -->

            </header> <!-- /#header -->
            <!--/ END HEADER -->

            <aside id="sidebar-left" class="sidebar-circle">

                <!-- Start left navigation - profile shortcut -->
                <div class="sidebar-content">

                    <div class="media">
                        <a class="pull-left has-notif avatar" href="page-profile.html">
                            <img src="/assets/avatar.png" alt="admin">
                            <i class="online"></i>
                        </a>
                        <div class="media-body">
                            <h4 class="media-heading">Bonjour,</h4>
                            <small>&nbsp;</small>
                        </div>
                    </div>
                </div><!-- /.sidebar-content -->
                <!--/ End left navigation -  profile shortcut -->

                <!-- Start left navigation - menu -->
                <ul class="sidebar-menu">

                    <!-- Start navigation - frontend themes -->
                    <li>
                        <a href="frontend-themes.html">
                            <span class="icon"><i class="fa fa-leaf"></i></span>
                            <span class="text">Ajouter un contact</span>
                        </a>
                    </li>
                    <!--/ End navigation - frontend themes -->

                    <!-- Start navigation - dashboard -->
                    <li>
                        <a href="/contact/send_email">
                            <span class="icon"><i class="fa fa-home"></i></span>
                            <span class="text">Envoyer des emails</span>
                        </a>
                    </li>
                    <!--/ End navigation - dashboard -->

                    <!-- Start navigation - landing -->
                    <li>
                        <a href="index.html">
                            <span class="icon"><i class="fa fa-rocket"></i></span>
                            <span class="text">Envoyer des sms</span>
                        </a>
                    </li>
                    <!--/ End navigation - landing -->

                </ul><!-- /.sidebar-menu -->
                <!--/ End left navigation - menu -->

                <!-- Start left navigation - footer -->
                <!-- /.sidebar-footer -->
                <!--/ End left navigation - footer -->

            </aside><!-- /#sidebar-left -->
            <!--/ END SIDEBAR LEFT -->

            <!-- START @PAGE CONTENT -->
            <section id="page-content">

                <!-- Start page header -->
                <!-- /.header-content -->
                <!--/ End page header -->

                <!-- Start body content -->
                <div class="body-content animated fadeIn">

                    <div class="row">
                        <div class="col-md-12">

                            <!-- Start basic validation -->
                            <div class="panel rounded shadow">
                                <div class="panel-heading">
                                    <div class="pull-left">
                                        <h3 class="panel-title">Ajouter un contact</h3>
                                    </div><!-- /.pull-left -->

                                    <div class="clearfix"></div>
                                </div><!-- /.panel-heading -->
                                <div class="panel-body no-padding">

                                    <%= form_tag("/contact", {class: "form-horizontal form-bordered"}) do |f| %>
                                        <div class="form-body">
                                            <div class="form-group">
                                                <label class="col-sm-3 control-label">Email<span class="asterisk">*</span></label>
                                                <div class="col-sm-7">
                                                    <input type="text" class="form-control input-sm" name="contact[email]" placeholder="email@contact.com" required>
                                                </div>
                                            </div><!-- /.form-group -->
                                            <div class="form-group">
                                                <label class="col-sm-3 control-label">Nom</label>
                                                <div class="col-sm-7">
                                                    <input type="text" class="form-control input-sm" name="contact[last_name]" placeholder="Dupont">
                                                </div>
                                            </div><!-- /.form-group -->
                                            <div class="form-group">
                                                <label class="col-sm-3 control-label">Prénom</label>
                                                <div class="col-sm-7">
                                                    <input type="text" class="form-control input-sm" name="contact[first_name]" placeholder="Jean">
                                                </div>
                                            </div><!-- /.form-group -->
                                            <div class="form-group">
                                                <label class="col-sm-3 control-label">Date de naissance</label>
                                                <div class="col-sm-7">
                                                    <input type="text" class="form-control input-sm" name="contact[birthday]" placeholder="mm/dd/yyyy">
                                                </div>
                                            </div><!-- /.form-group -->
                                            <div class="form-group">
                                                <label class="col-sm-3 control-label">Téléphone</label>
                                                <div class="col-sm-7">
                                                    <input type="text" class="form-control input-sm" name="contact[phone]" placeholder="0853231245">
                                                </div>
                                            </div><!-- /.form-group -->
                                            <div class="form-group">
                                                <label class="col-sm-3 control-label">VIP</label>
                                                <div class="col-sm-7">
                                                    <input type="checkbox" name=contact[vip]> Ajouter ce client en tant que VIP
                                                </div>
                                            </div><!-- /.form-group -->
                                        </div><!-- /.form-body -->
                                        <div class="form-footer">
                                            <div class="col-sm-offset-3">
                                                <button type="submit" class="btn btn-theme">Ajouter le contact</button>
                                            </div>
                                        </div><!-- /.form-footer -->
                                    <% end %>

                                </div><!-- /.panel-body -->
                            </div><!-- /.panel -->
                            <!--/ End basic validation -->

                        </div>
                    </div><!-- /.row -->

                </div><!-- /.body-content -->
                <!--/ End body content -->

            </section><!-- /#page-content -->
            <!--/ END PAGE CONTENT -->

            <!-- START @SIDEBAR RIGHT -->
            <aside id="sidebar-right">

                <div class="panel panel-tab">
                    <div class="panel-heading no-padding">
                        <div class="pull-right">
                            <ul class="nav nav-tabs">
                                <li>
                                    <a href="#sidebar-profile" data-toggle="tab">
                                        <i class="fa fa-user"></i>
                                    </a>
                                </li>
                                <li>
                                    <a href="#sidebar-layout" data-toggle="tab">
                                        <i class="fa fa-cogs"></i>
                                    </a>
                                </li>
                                <li class="active">
                                    <a href="#sidebar-setting" data-toggle="tab">
                                        <i class="fa fa-paint-brush"></i>
                                    </a>
                                </li>
                                <li>
                                    <a href="#sidebar-chat" data-toggle="tab">
                                        <i class="fa fa-comments"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <div class="clearfix"></div>
                    </div>

                </div>

            </aside><!-- /#sidebar-right -->
            <!--/ END SIDEBAR RIGHT -->

        </section><!-- /#wrapper -->

</body>
